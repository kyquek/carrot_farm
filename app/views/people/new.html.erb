<h1>New person</h1>

<% form_for(@person) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :secret %><br />
    <%= f.password_field :secret %>
  </p>
  <p>
    <%= f.label :country %><br />
    <%= f.radio_button :country, 'SIN' %>Singapore<br />
    <%= f.radio_button :country, 'MAL' %>Malaysia<br />
    <%= f.radio_button :country, 'IND' %>Indonesia<br />
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols =>30, :rows => 10 %>
  </p>
  <p>
    <%= f.label :can_send_email %><br />
    <%= f.check_box :can_send_email, {:class => 'email', :checked => "checked"}, 'yes', 'no' %>
  </p>
  <p>
    <%= f.label :graduation_year %><br />
    <%= f.hidden_field :graduation_year %>
  </p>
  <p>
    <%= f.label :body_temperature %><br />
    <%= f.text_field :body_temperature %>
  </p>
  <p>
    <%= f.label :price %><br />
    <%= f.text_field :price %>
  </p>
  <p>
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday %>
  </p>
  <p>
    <%= f.label :favorite_time %><br />
    <%= f.time_select :favorite_time %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', people_path %>
